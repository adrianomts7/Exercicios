<%- include('includes/head') %>
<%- include('includes/nav') %>

<section class="login">
    
    <h1>Login</h1>
    <p>Faça login e acesse sua agenda de contatos</p>
        
    <form action="/login/login" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <label for="email">Digite o seu e-mail:</label>
        <input type="email" name="email" id="email" placeholder="usuario@gmail.com">
        
        <label for="password">Digite a sua password:</label>
        <input type="text" name="password" id="password">
        
        <input type="submit" value="Fazer Login" class="botao">
    </form>
   
    <p>Não tem conta?<a href="/register" class="link-register">Cadastre-se</a></p>

</section>

<%- include('includes/footer') %>